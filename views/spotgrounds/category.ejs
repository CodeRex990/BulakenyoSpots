<% layout('./layouts/boilerplate') %>

<div class="container">
    <h1>Spots in <%= category %></h1>
    <div class="row">
        <% for(let spot of spotgrounds) { %>
            <div class="col-md-4">
                <div class="card mb-3">
                    <img src="<%= spot.image %>" class="card-img-top" alt="<%= spot.title %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= spot.title %></h5>
                        <p class="card-text"><%= spot.description %></p>
                        <a href="/spotgrounds/<%= spot._id %>" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    <a href="/spotgrounds" class="btn btn-secondary">Back to All Spots</a>
</div>
