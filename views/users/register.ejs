<% layout('layouts/boilerplate')%>
    <div class="container d-flex justify-content-center align-items-center vh-80"">
    <div class=" row">
        <div class="col-md-6 col-xl-4">
            <div class="card shadow" style="width: 600px; height: 840px;">
                <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/src/lr.png" alt="" class="card-img-top" />
                        </div>
                        <div class="carousel-item ">
                            <img src="/src/lr.png" alt="" class="card-img-top" />
                        </div>
                        <div class="carousel-item ">
                            <img src="/src/lr.png" alt="" class="card-img-top" />
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title reg-title">REGISTER</h5>
                    <h6 class="text-muted fs-10">Please Don't use Personal EMAIL & PASSWORD</h6>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">USERNAME</label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">EMAIL</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label " for="password">PASSWORD</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <button class="btn btn-success btn-block reg-btn">REGISTER</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
    </div>
    
